<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>All Orders</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h2 class="mb-3">All Orders</h2>
    <p class="text-muted">Overview of every order invoice in the system.</p>

    <% if (orders && orders.length) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>Order #</th>
              <th>User</th>
              <th>Email</th>
              <th>Total</th>
              <th>Payment</th>
              <th>Placed</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order => { %>
              <tr>
                <td><%= order.orderId %></td>
                <td><%= order.username || ('User ' + order.userId) %></td>
                <td><%= order.email || '-' %></td>
                <td>$<%= Number(order.total || 0).toFixed(2) %></td>
                <td><%= order.paymentMethod %></td>
                <td><%= new Date(order.createdAt).toLocaleString() %></td>
                <td>
                  <a class="btn btn-sm btn-primary" href="/admin/invoice/<%= order.orderId %>">View</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">No orders found.</div>
    <% } %>
  </div>
</body>
</html>
