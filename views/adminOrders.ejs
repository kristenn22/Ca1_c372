<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>All Orders</title>
  <style>
    .status-badge {
      font-size: 0.85rem;
      padding: 0.35rem 0.65rem;
    }
    .status-pending { background-color: #ffc107; color: black; }
    .status-packed { background-color: #17a2b8; color: white; }
    .status-delivering { background-color: #0275d8; color: white; }
    .status-delivered { background-color: #28a745; color: white; }
    .status-refunded { background-color: #dc3545; color: white; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">All Orders</h2>
      <a href="/admin/refund-concerns" class="btn btn-warning btn-sm">View Refund Concerns</a>
    </div>
    <p class="text-muted">Overview of every order invoice in the system.</p>

    <% if (orders && orders.length) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>Order #</th>
              <th>User</th>
              <th>Email</th>
              <th>Total</th>
              <th>Payment</th>
              <th>Status</th>
              <th>Placed</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order => { %>
              <tr>
                <td><strong><%= order.orderId %></strong></td>
                <td><%= order.username || ('User ' + order.userId) %></td>
                <td><%= order.email || '-' %></td>
                <td>$<%= Number(order.total || 0).toFixed(2) %></td>
                <td><%= order.paymentMethod %></td>
                <td>
                  <span class="badge status-badge <% 
                    if (order.status === 'Pending') { %>status-pending<% } 
                    else if (order.status === 'Packed') { %>status-packed<% } 
                    else if (order.status === 'Out for Delivery') { %>status-delivering<% } 
                    else if (order.status === 'Delivered') { %>status-delivered<% }
                    else if (order.status === 'Refunded') { %>status-refunded<% } 
                  %>">
                    <%= order.status || 'Pending' %>
                  </span>
                </td>
                <td><%= new Date(order.createdAt).toLocaleString() %></td>
                <td>
                  <a class="btn btn-sm btn-primary" href="/admin/invoice/<%= order.orderId %>">View</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">No orders found.</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
