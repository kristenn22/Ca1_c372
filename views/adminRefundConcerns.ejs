<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Refund Concerns</title>
  <style>
    .status-badge {
      font-size: 0.85rem;
      padding: 0.35rem 0.65rem;
    }
    .status-pending { background-color: #ffc107; color: black; }
    .status-approved { background-color: #28a745; color: white; }
    .status-rejected { background-color: #dc3545; color: white; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Refund Concerns</h2>
      <a href="/admin/orders" class="btn btn-secondary btn-sm">Back to Orders</a>
    </div>
    <p class="text-muted">Manage refund requests from customers.</p>

    <!-- Tabs for filtering -->
    <ul class="nav nav-tabs mb-4" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">
          Pending
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab">
          Approved
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">
          Rejected
        </button>
      </li>
    </ul>

    <div class="tab-content">
      <!-- Pending Concerns -->
      <div class="tab-pane fade show active" id="pending" role="tabpanel">
        <% const pendingConcerns = concerns ? concerns.filter(c => c.status === 'Pending') : []; %>
        
        <% if (pendingConcerns && pendingConcerns.length) { %>
          <div class="row">
            <% pendingConcerns.forEach(concern => { %>
              <div class="col-md-6 mb-3">
                <div class="card">
                  <div class="card-header bg-warning">
                    <h6 class="mb-0">Order #<%= concern.orderId %> - <%= concern.reason %></h6>
                  </div>
                  <div class="card-body">
                    <p><strong>Customer:</strong> <%= concern.username %></p>
                    <p><strong>Email:</strong> <%= concern.email %></p>
                    <p><strong>Order Total:</strong> $<%= Number(concern.total || 0).toFixed(2) %></p>
                    <p><strong>Refund Type:</strong> <%= concern.refundType || 'Full' %></p>
                    <p><strong>Refund Amount:</strong> $<%= Number(concern.refundAmount || concern.total || 0).toFixed(2) %></p>
                    <p><strong>Raised On:</strong> <%= new Date(concern.createdAt).toLocaleString() %></p>
                  <div class="card mt-2">
                      <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Description:</h6>
                        <p class="card-text"><%= concern.description %></p>
                      </div>
                    </div>
                    <% if (concern.imagePath) { %>
                      <div class="card mt-2">
                        <div class="card-body">
                          <h6 class="card-subtitle mb-2 text-muted">Evidence Image:</h6>
                          <img src="<%= concern.imagePath %>" alt="Refund Evidence" class="img-fluid" style="max-height: 300px; max-width: 100%;">
                        </div>
                      </div>
                    <% } %>
                    <% if (concern.refundType === 'Partial' && concern.refundItemNames) { %>
                      <div class="card mt-2">
                        <div class="card-body">
                          <h6 class="card-subtitle mb-2 text-muted">Refund Items:</h6>
                          <p class="card-text"><%= concern.refundItemNames %></p>
                        </div>
                      </div>
                    <% } %>
                  </div>
                  <div class="card-footer">
                    <!-- Approve Modal Trigger -->
                    <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#approveModal-<%= concern.id %>">
                      Approve Refund
                    </button>
                    
                    <!-- Approve Modal -->
                    <div class="modal fade" id="approveModal-<%= concern.id %>" tabindex="-1" aria-labelledby="approveModalLabel-<%= concern.id %>" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="approveModalLabel-<%= concern.id %>">Approve Refund - Order #<%= concern.orderId %></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <form method="POST" action="/admin/refund/<%= concern.id %>/approve">
                            <div class="modal-body">
                              <input type="hidden" name="orderId" value="<%= concern.orderId %>">
                              
                              <div class="mb-3">
                                <label class="form-label">Refund Type</label>
                                <div class="form-check">
                                  <input class="form-check-input refund-type-full-<%= concern.id %>" type="radio" name="refundType" id="refundTypeFull-<%= concern.id %>" value="Full" checked>
                                  <label class="form-check-label" for="refundTypeFull-<%= concern.id %>">
                                    Full Refund ($<%= Number(concern.total || 0).toFixed(2) %>)
                                  </label>
                                </div>
                                <% if (concern.itemCount > 1) { %>
                                  <div class="form-check">
                                    <input class="form-check-input refund-type-partial-<%= concern.id %>" type="radio" name="refundType" id="refundTypePartial-<%= concern.id %>" value="Partial">
                                    <label class="form-check-label" for="refundTypePartial-<%= concern.id %>">
                                      Partial Refund (select items)
                                    </label>
                                  </div>
                                <% } %>
                              </div>

                              <% if (concern.itemCount > 1) { %>
                                <div id="partialRefundSection-<%= concern.id %>" style="display: none;" class="mb-3">
                                  <label class="form-label">Select Items to Refund</label>
                                  <div class="border rounded p-2">
                                    <% concern.items.forEach(item => { %>
                                      <div class="form-check">
                                        <input class="form-check-input partial-item-<%= concern.id %>" type="checkbox" name="refundItems" value="<%= item.orderItemId %>" id="item-<%= concern.id %>-<%= item.orderItemId %>">
                                        <label class="form-check-label" for="item-<%= concern.id %>-<%= item.orderItemId %>">
                                          <%= item.productName %> (Qty: <%= item.quantity %>, $<%= Number(item.price).toFixed(2) %>)
                                        </label>
                                      </div>
                                    <% }) %>
                                  </div>
                                  <div class="mt-2">
                                    <label class="form-label">Refund Amount</label>
                                    <input type="number" class="form-control" name="amount" id="refundAmount-<%= concern.id %>" step="0.01" required>
                                    <small class="text-muted">Enter the total refund amount for selected items</small>
                                  </div>
                                </div>
                              <% } %>

                              <% if (concern.itemCount === 1) { %>
                                <input type="hidden" name="amount" value="<%= concern.refundAmount || concern.total %>">
                                <div class="alert alert-info">
                                  <small>Only 1 item in this order - Full refund only ($<%= Number(concern.total || 0).toFixed(2) %>)</small>
                                </div>
                              <% } else { %>
                                <div class="mb-3" id="fullRefundAmount-<%= concern.id %>">
                                  <label class="form-label">Refund Amount</label>
                                  <input type="number" class="form-control" name="amount" value="<%= concern.refundAmount || concern.total %>" step="0.01" required>
                                </div>
                              <% } %>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <button type="submit" class="btn btn-success">Approve Refund</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>

                    <form method="POST" action="/admin/refund/<%= concern.id %>/reject" style="display: inline;">
                      <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                    </form>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="alert alert-info">No pending refund concerns.</div>
        <% } %>
      </div>

      <!-- Approved Concerns -->
      <div class="tab-pane fade" id="approved" role="tabpanel">
        <% const approvedConcerns = concerns ? concerns.filter(c => c.status === 'Approved') : []; %>
        
        <% if (approvedConcerns && approvedConcerns.length) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead class="table-dark">
                <tr>
                  <th>Order #</th>
                  <th>Customer</th>
                  <th>Reason</th>
                  <th>Amount</th>
                  <th>Type</th>
                  <th>Approved On</th>
                </tr>
              </thead>
              <tbody>
                <% approvedConcerns.forEach(concern => { %>
                  <tr>
                    <td><strong><%= concern.orderId %></strong></td>
                    <td><%= concern.username %> (<%= concern.email %>)</td>
                    <td><%= concern.reason %></td>
                    <td>$<%= Number(concern.refundAmount || concern.total || 0).toFixed(2) %></td>
                    <td><%= concern.refundType || 'Full' %></td>
                    <td><%= new Date(concern.resolvedAt).toLocaleString() %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="alert alert-info">No approved refunds.</div>
        <% } %>
      </div>

      <!-- Rejected Concerns -->
      <div class="tab-pane fade" id="rejected" role="tabpanel">
        <% const rejectedConcerns = concerns ? concerns.filter(c => c.status === 'Rejected') : []; %>
        
        <% if (rejectedConcerns && rejectedConcerns.length) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead class="table-dark">
                <tr>
                  <th>Order #</th>
                  <th>Customer</th>
                  <th>Reason</th>
                  <th>Rejected On</th>
                </tr>
              </thead>
              <tbody>
                <% rejectedConcerns.forEach(concern => { %>
                  <tr>
                    <td><strong><%= concern.orderId %></strong></td>
                    <td><%= concern.username %> (<%= concern.email %>)</td>
                    <td><%= concern.reason %></td>
                    <td><%= new Date(concern.resolvedAt).toLocaleString() %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="alert alert-info">No rejected concerns.</div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Handle partial refund type toggle and amount calculation
    document.querySelectorAll('[id^="approveModal-"]').forEach(modal => {
      const concernId = modal.id.replace('approveModal-', '');
      
      const fullRadio = document.getElementById('refundTypeFull-' + concernId);
      const partialRadio = document.getElementById('refundTypePartial-' + concernId);
      const partialSection = document.getElementById('partialRefundSection-' + concernId);
      const fullAmountInput = document.getElementById('fullRefundAmount-' + concernId);
      const partialAmountInput = document.getElementById('refundAmount-' + concernId);
      const partialItems = document.querySelectorAll('.partial-item-' + concernId);

      if (fullRadio && partialRadio && partialSection) {
        fullRadio.addEventListener('change', () => {
          partialSection.style.display = 'none';
          if (fullAmountInput) fullAmountInput.style.display = 'block';
        });

        partialRadio.addEventListener('change', () => {
          partialSection.style.display = 'block';
          if (fullAmountInput) fullAmountInput.style.display = 'none';
        });

        // Calculate amount based on selected items
        partialItems.forEach(item => {
          item.addEventListener('change', () => {
            let total = 0;
            partialItems.forEach(checkbox => {
              if (checkbox.checked) {
                const label = checkbox.nextElementSibling.textContent;
                const priceMatch = label.match(/\$([0-9.]+)\)/);
                if (priceMatch) {
                  total += parseFloat(priceMatch[1]);
                }
              }
            });
            if (partialAmountInput) {
              partialAmountInput.value = total.toFixed(2);
            }
          });
        });
      }
    });
  </script></body>
</html>