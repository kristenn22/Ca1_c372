<h2>Your Order History</h2>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Total</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% orders.forEach(order => { %>
      <tr>
        <td><%= order.id %></td>
        <td>$<%= order.total.toFixed(2) %></td>
        <td><%= order.created_at.toLocaleString() %></td>
        <td>
          <a href="/order-success/<%= order.id %>" class="btn btn-sm btn-primary">View</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
