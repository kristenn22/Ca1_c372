            <div class="stat-card-link">View All Orders â†’</div>
        </a>

        <!-- Manage Products Card -->
        <a href="/products" class="stat-card">
            <div class="stat-card-icon">ðŸ“¦</div>
            <div class="stat-card-title">Products</div>
            <div class="stat-card-value"><%= productCount %></div>
            <div class="stat-card-link">Manage Products â†’</div>
        </a>

        <!-- Manage Users Card -->
        <a href="/admin/users" class="stat-card">
            <div class="stat-card-icon">ðŸ‘¥</div>
            <div class="stat-card-title">Users</div>
            <div class="stat-card-value"><%= userCount %></div>
            <div class="stat-card-link">Manage Users â†’</div>
        </a>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <h4>ðŸš€ Quick Actions</h4>
            <div class="action-buttons">
                <a href="/addProduct" class="action-btn action-btn-primary">+ Add New Product</a>
                <a href="/admin/orders" class="action-btn action-btn-secondary">View All Orders</a>
                <a href="/admin/users" class="action-btn action-btn-secondary">Manage Users</a>
            </div>
        </div>

    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
