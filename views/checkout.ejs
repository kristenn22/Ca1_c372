<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .checkout-container {
      display: flex;
      gap: 40px;
      margin-top: 30px;
    }

    .left-section {
      flex: 1;
    }

    .right-section {
      width: 350px;
      background: #fafafa;
      padding: 20px;
      border-radius: 12px;
      border: 1px solid #ddd;
      height: fit-content;
      position: sticky;
      top: 20px;
    }

    .cart-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }

    .cart-img {
      width: 55px;
      height: 55px;
      object-fit: cover;
      border-radius: 8px;
      margin-right: 10px;
    }

    .summary-line {
      display: flex;
      justify-content: space-between;
      margin-top: 8px;
    }

    .summary-line.total {
      font-weight: bold;
      font-size: 18px;
    }

    .payment-btn {
      width: 160px;
      padding: 10px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
      margin-right: 10px;
    }

    .paypal-btn {
      background: #ffc439;
    }

    .gpay-btn {
      background: #000;
      color: white;
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart/checkout">Checkout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- MAIN CONTENT -->
  <div class="container">

    <h2 class="mt-4">Checkout</h2>

    <div class="checkout-container">

      <!-- LEFT SECTION -->
      <div class="left-section">

        <form action="/cart/checkout/submit" method="POST">

          <!-- Address -->
          <label class="form-label mt-3">Shipping Address:</label>
          <input type="text" class="form-control" id="address" name="address" required>

          <!-- Payment -->
          <label class="form-label mt-4">Payment Method:</label>
          <select class="form-select" id="paymentMethod" name="paymentMethod" required>
            <option value="credit-card">Credit Card</option>
            <option value="paypal">PayPal</option>
          </select>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary mt-4">Place Order</button>

        </form>

      </div>

      <!-- RIGHT SECTION (ORDER SUMMARY) -->
      <div class="right-section">

        <h5>Your Order</h5>

        <!-- DYNAMIC CART ITEMS -->
        <% if (cart && cart.length > 0) { %>
          <% cart.forEach(item => { %>
            <div class="cart-item">
              <div class="d-flex align-items-center">
                <img src="/images/<%= item.image %>" class="cart-img">
                <div>
                  <div><%= item.name %></div>
                  <div class="text-muted">x <%= item.quantity %></div>
                </div>
              </div>
              <div>$<%= (item.price * item.quantity).toFixed(2) %></div>
            </div>
          <% }) %>
        <% } else { %>
          <p>Your cart is empty.</p>
        <% } %>

        <hr>

        <!-- Discount Code -->
        <label class="form-label">Discount Code</label>
        <input type="text" class="form-control" placeholder="Enter code">

        <button class="btn btn-outline-secondary mt-2">Apply</button>

        <hr>

        <!-- TOTAL SUMMARY -->
        <div class="summary-line">
          <span>Subtotal</span>
          <span>$<%= subtotal.toFixed(2) %></span>
        </div>

        <div class="summary-line">
          <span>Shipping</span>
          <span>$<%= shipping.toFixed(2) %></span>
        </div>

        <div class="summary-line total mt-2">
          <span>Total</span>
          <span>$<%= total.toFixed(2) %></span>
        </div>

      </div>

    </div>
  </div>

</body>
</html>
