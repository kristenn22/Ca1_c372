<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <% if (paypalClientId) { %>
  <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=USD"></script>
  <% } %>

  <style>
    .checkout-container { display: flex; gap: 40px; margin-top: 30px; }
    .left-section { flex: 1; }
    .right-section {
      width: 350px; background: #fafafa; padding: 20px;
      border-radius: 12px; border: 1px solid #ddd;
      height: fit-content; position: sticky; top: 20px;
    }
    .cart-item { display: flex; justify-content: space-between; margin-bottom: 15px; }
    .cart-img { width: 55px; height: 55px; object-fit: cover; border-radius: 8px; margin-right: 10px; }
    .summary-line { display: flex; justify-content: space-between; margin-top: 8px; }
    .summary-line.total { font-weight: bold; font-size: 18px; }
    #paypal-button-container { max-width: 400px; }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <%- include('partials/navbar') %>

  <!-- MAIN CONTENT -->
  <div class="container">

    <h2 class="mt-4">Checkout</h2>

    <div class="checkout-container">

      <!-- LEFT SIDE -->
      <div class="left-section">

        <form id="checkoutForm" method="POST">

          <label class="form-label mt-3">Shipping Address:</label>
          <input type="text" class="form-control" name="address" required>

        </form>

        <!-- PayPal Payment -->
        <div class="mt-4">
          <h5>Pay with PayPal</h5>
          <div id="paypal-button-container"></div>
        </div>

        <!-- NETS QR Payment Button -->
        <div class="mt-4">
          <button type="button" class="btn btn-danger" id="netsQrBtn" style="width: 100%;">
            <strong>Pay with NETS QR</strong>
          </button>
        </div>

      </div>

      <!-- RIGHT SIDE -->
      <div class="right-section">
        <h5>Your Order</h5>

        <% cart.forEach(item => { %>
          <div class="cart-item">
            <div class="d-flex align-items-center">
              <img src="/images/<%= item.image %>" class="cart-img">
              <div>
                <div><%= item.name %></div>
                <div class="text-muted">x <%= item.quantity %></div>
              </div>
            </div>
            <div>$<%= (item.price * item.quantity).toFixed(2) %></div>
          </div>
        <% }) %>

        <hr>

        <div class="summary-line">
          <span>Subtotal</span>
          <span>$<%= subtotal.toFixed(2) %></span>
        </div>

        <div class="summary-line">
          <span>Shipping</span>
          <span>$<%= shipping.toFixed(2) %></span>
        </div>

        <div class="summary-line total mt-2">
          <span>Total</span>
          <span>$<%= total.toFixed(2) %></span>
        </div>

      </div>

    </div>
  </div>

  <script>
    // Helper function to get total amount
    const getCartTotal = () => {
      const totalElement = document.querySelector('.summary-line.total span:last-child');
      const totalText = totalElement.textContent.trim();
      return parseFloat(totalText.replace('$', ''));
    };

    // Helper function to get address
    const getAddress = () => {
      const addressInput = document.querySelector('input[name="address"]');
      return addressInput.value.trim();
    };

    const totalAmount = '<%= total %>';
    const addressInput = document.querySelector('input[name="address"]');
    const paypalClientId = '<%= paypalClientId || "" %>';
    const cart = <%= JSON.stringify(cart.map(item => item.id)) %>;

    // PayPal Button Integration
    function renderPaypalButtons() {
      if (!window.paypal) {
        console.error('PayPal SDK not loaded');
        document.getElementById('paypal-button-container').innerHTML = '<div class="alert alert-danger">PayPal SDK failed to load. Please check your internet connection.</div>';
        return;
      }
      paypal.Buttons({
        createOrder: function (data, actions) {
          return fetch('/api/paypal/create-order', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ amount: totalAmount })
          })
            .then(res => res.json())
            .then(data => {
              console.log('Create order response:', data);
              if (data.success && data.orderId) {
                return data.orderId;
              } else if (data.orderId) {
                return data.orderId;
              } else {
                console.error('Unexpected response format:', data);
                throw new Error('Failed to create order: ' + (data.message || data.error || 'Unknown error'));
              }
            })
            .catch(err => {
              console.error('Create order fetch error:', err);
              throw err;
            });
        },
        onApprove: function (data, actions) {
          return fetch('/api/paypal/pay', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
              orderId: data.orderID,
              address: addressInput.value.trim()
            })
          })
            .then(res => res.json())
            .then(details => {
              if (details.success) {
                window.location.href = "/order-success/" + details.orderId;
              } else {
                alert('Payment not completed: ' + (details.error || 'Unknown error'));
              }
            })
            .catch(err => {
              console.error('Payment error:', err);
              alert('Payment processing failed. Please try again.');
            });
        },
        onClick: function (data, actions) {
          const address = addressInput.value.trim();
          if (!address) {
            alert('Please enter a shipping address.');
            addressInput.focus();
            return actions.reject();
          }

          return actions.resolve();
        },
        onError: function (err) {
          console.error('PayPal error details:', err);
          alert('An error occurred with PayPal: ' + (err.message || JSON.stringify(err)));
        }
      }).render('#paypal-button-container');
    }

    if (!paypalClientId) {
      console.warn('PayPal client ID not configured');
      document.getElementById('paypal-button-container').innerHTML = '<div class="alert alert-warning">PayPal is not configured. Please add PAYPAL_CLIENT_ID to .env file.</div>';
    } else {
      renderPaypalButtons();
    }

    // NETS QR Button Handler
    document.getElementById('netsQrBtn').addEventListener('click', async (e) => {
      e.preventDefault();
      
      const address = getAddress();
      if (!address) {
        alert('Please enter a shipping address');
        return;
      }

      // Get the total amount from the right section
      const cartTotal = getCartTotal();

      console.log('Initiating NETS QR payment with total:', cartTotal);

      try {
        // Send POST request to generate QR code
        const response = await fetch('/generateNETSQR', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ cartTotal: cartTotal })
        });

        if (response.ok) {
          // Get the HTML response and render it
          const html = await response.text();
          document.documentElement.innerHTML = html;
        } else {
          alert('Failed to generate QR code. Please try again.');
        }
      } catch (error) {
        console.error('Error generating QR code:', error);
        alert('An error occurred. Please try again.');
      }
    });
  </script>

</body>
</html>